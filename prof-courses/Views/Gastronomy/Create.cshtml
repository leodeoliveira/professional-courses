@model ProfCourses.Models.StudentViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Gastronomia";
}

@using (Html.BeginForm("Create", "Gastronomy", FormMethod.Post, new { @class = "form form-horizontal" }))
{


    <div class="form-group">
        <h3>Cadastre-se no curso de @ViewBag.Title</h3>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ex.: João Paulo da Silva" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Ex.: contato@selbetti.com.br" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Ex.: (47) 3434-3434" })
        </div>
    </div>
   
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-lg btn-success">Cadastrar</button>
        </div>
    </div>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/create.js"></script>